{
  "name": "@packages/server",
  "version": "1.0.0",
  "description": "My cool TypeScript app",
  "main": "index.js",
  "scripts": {
    "start": "node dist/index.js",
    "compile": "ts-node build.ts && tsc",
    "dev": "nodemon server/index.ts | pino-pretty",
    "dev:debug": "nodemon --exec 'node -r ts-node/register --inspect-brk' server/index.ts | pino-pretty",
    "lint": "eslint -c .eslintrc.js '{server, test}/**/*.{js,ts,tsx}' --quiet",
    "lint:fix": "eslint -c .eslintrc.js '{server, test}/**/*.{js,ts,tsx}' --quiet --fix",
    "test": "mocha test/**/*.ts --exit",
    "test:debug": "mocha --inspect-brk test/**/*.ts --exit"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "cookie-parser": "^1.4.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "pino": "^6.2.1",
    "express-openapi-validator": "^3.12.9"
  },
  "devDependencies": {
    "@types/chai": "^4.2.11",
    "@types/express": "^4.17.6",
    "@types/mocha": "^7.0.2",
    "@types/pino": "^6.0.1",
    "@typescript-eslint/eslint-plugin": "^2.33.0",
    "chai": "^4.2.0",
    "mocha": "^7.1.2",
    "nodemon": "^2.0.4",
    "pino-pretty": "^4.0.0",
    "shelljs": "^0.8.4",
    "supertest": "^4.0.2",
    "ts-node": "^8.10.1",
    "typescript": "^3.9.2"
  },
  "author": "Carmine DiMascio <cdimascio@gmail.com> (https://github.com/cdimascio)"
}
